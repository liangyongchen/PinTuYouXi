<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
     >

    <!-- id  会在R文件中对应生成id 
        android:layout_width="wrap_content"  文本的宽
        android:layout_height="wrap_content" 文本的高
               wrap_content  包裹内容，表示文本的宽度友文本的内容决定
               match_parent  匹配父容器    父容器有多大，文本就有多大
               "fill_parent" 匹配父容器    父容器有多大，文本就有多大，同上
        android:layout_centerHorizontal="true"   设置水平居中
        android:layout_centerVertical="true"     设置垂直居中 
        android:layout_centerInParent="true"     设置整体居中
        android:text="点击继续游戏"      文本内容
        android:textSize="30sp"      设置字体大小
        android:textColor=""         设置字体颜色
                                                                                   透明度                      红                            绿                       蓝
          #ffffffff     A         R        G       B
          #ffffff                 RGB
          #ffff                   ARGB
          #ff                     RGB
                                   透明度                    0 表示完全透明              ff 表示完全不透明        
         android:background=""    设置背景                                        
    -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:textColor="#fff000"
        android:text="@string/title_activity_pause" />

</RelativeLayout>