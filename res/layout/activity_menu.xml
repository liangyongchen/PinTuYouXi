<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity"
    android:background="@drawable/t3"
     >
<!--   android:background="@drawable/b1"               表示将背景设置为图片  
         android:layout_alignParentRight="true"        放在父容器右部
         android:layout_marginRight="true"             距离最右端    28dp
         android:layout_alignLeft="@+id/iv_start"      左对齐
         android:layout_below="@+id/iv_start"
-->
    <ImageView
        android:id="@+id/iv_set"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/iv_score"
        android:layout_below="@+id/iv_start"
        android:layout_marginTop="48dp"
        android:src="@drawable/bm3" />

    <ImageView
        android:id="@+id/iv_help"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/iv_set"
        android:layout_below="@+id/iv_score"
        android:layout_marginTop="49dp"
        android:src="@drawable/bm4" />

    <ImageView
        android:id="@+id/iv_about"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/iv_help"
        android:layout_below="@+id/iv_set"
        android:layout_marginTop="53dp"
        android:src="@drawable/bm5" />

    <ImageView
        android:id="@+id/iv_score"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/iv_start"
        android:layout_alignTop="@+id/iv_start"
        android:layout_marginTop="62dp"
        android:src="@drawable/bm2" />

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/bm1" />

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/iv_about"
        android:layout_below="@+id/iv_help"
        android:layout_marginTop="54dp"
        android:src="@drawable/bm6" />

</RelativeLayout>
